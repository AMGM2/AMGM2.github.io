disp('problema 2.9')

disp(' Considere el siguiente conjunto de datos: ')
disp('(x; y) = [ip sen(q1);-ip cos(q1)]')


format short

n=10; 
p=2;
for k=1:n
    q1(k,1)=random('normal', 0, 1);
end

l_p=0.45; % Valor teorico de la barra de alumino
x_p=l_p*sin(q1);
y_p=-l_p*cos(q1);
   


for k=1:n
      X(k, 1:p)=[1, sin(q1(k,1))];
      X(k+1, 1:p)=[1, -cos(q1(k,1))];
   y(k,1)=x_p(k,1);  
   y(k+1,1)=y_p(k,1);  
end

beta_estimado2=(X'*X)^(-1)*X'*y
disp(beta_estimado2)

